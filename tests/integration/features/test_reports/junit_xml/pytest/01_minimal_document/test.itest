RUN: cp -r %S/strictdoc.toml %S/docs %S/src %S/tests %T/
RUN: cd %T && PYTHONPATH=%T pytest tests/ --junit-xml=%T/tests_unit.pytest.junit.xml --rootdir=%T
RUN: %strictdoc export %T --output-dir %T/output | filecheck %s --dump-input=fail

# Ensure that the test report document is generated.
CHECK: Published: Test report: pytest
RUN: %check_exists --file "%T/output/html/Output/tests_unit.pytest.junit.html"

# Ensure that the source and test files are generated.
RUN: %check_exists --file "%T/output/html/_source_files/src/foo.py.html"
RUN: %check_exists --file "%T/output/html/_source_files/tests/test_foo.py.html"

# Ensure that the test report document has the right content.
RUN: %cat "%T/output/html/Output/tests_unit.pytest.junit.html" | filecheck %s --check-prefix CHECK-TEST-REPORT
CHECK-TEST-REPORT: href="../_source_files/tests/test_foo.py.html#tests.test_foo.test_foo#4#8">
CHECK-TEST-REPORT: tests/test_foo.py, <i>lines: 4-8</i>, function test_foo
