{% extends "base.jinja.html" %}
{% set template_type = "Source coverage" %}

{% block head_css %}
  {{ super() }}
  <link rel="stylesheet" href="{{ view_object.render_static_url('source_coverage_screen.css') }}"/>
{% endblock head_css %}

{% block head_scripts %}
  {{ super() }}
  <script src="{{ view_object.render_static_url('source_coverage_screen.js') }}"></script>
{% endblock head_scripts %}

{% block title %}
