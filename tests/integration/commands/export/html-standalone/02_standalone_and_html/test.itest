REQUIRES: PLATFORM_IS_NOT_WINDOWS

RUN: %strictdoc export %S --formats=html,html-standalone --no-parallelization --output-dir Output | filecheck %s --dump-input=fail
CHECK: Published: Hello world doc

/// Standalone file is generated
RUN: %check_exists --file %S/Output/html/02_standalone_and_html/input.standalone.html
RUN: %check_exists --file %S/Output/html/02_standalone_and_html/input.html
RUN: %html_markup_validator %S/Output/html/02_standalone_and_html/input.standalone.html

/// Index is generated
RUN: %cat %S/Output/html/index.html | filecheck %s --dump-input=fail --check-prefix CHECK-HTML
CHECK-HTML: Hello world doc
CHECK-HTML: input.sdoc
CHECK-HTML: DOC
CHECK-HTML: TABLE
CHECK-HTML: TRACE
CHECK-HTML: DEEP-TRACE

